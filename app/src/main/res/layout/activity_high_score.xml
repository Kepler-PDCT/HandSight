<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:foregroundGravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HighScoreActivity">

    <TextView
        android:id="@+id/GuessingModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Guessing Mode:100" />

    <TextView
        android:id="@+id/ImitationModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Imitation Mode::100" />

    <TextView
        android:id="@+id/ChallengeModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Challenge Mode:100" />

    <TextView
        android:id="@+id/WordModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Word Mode: 100" />
</LinearLayout>